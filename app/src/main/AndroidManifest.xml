<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sweetsjie.readbook">


    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_OWNER_DATA"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/booklogin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListAllFileActivity"/>
        <activity android:name=".ViewFile"/>
        <activity android:name=".CollectBook"/>
        <activity android:name=".RegisterAccount"/>
        <activity android:name=".ChangePassword"/>
        <activity android:name=".AccountCancel"/>
        <activity android:name=".LoginUser"/>
    </application>

</manifest>